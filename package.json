{
    "name": "nextstep-monorepo",
    "version": "1.0.0",
    "description": "NextStep job platform - full-stack monorepo",
    "private": true,
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python manage.py runserver",
        "build": "cd frontend && npm run build",
        "install:all": "npm install && cd frontend && npm install",
        "setup": "npm run install:all && cd backend && python manage.py migrate && python manage.py createsuperuser",
        "test": "cd frontend && npm run check"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}